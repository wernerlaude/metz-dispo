<%= form_with model: loading_location, class: "resource-form", novalidate: true do |f| %>
  <% if loading_location.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(loading_location.errors.count, "Fehler") %> verhindert das Speichern:</h3>
      <ul>
        <% loading_location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <div class="form-grid">
      <div class="form-group">
        <%= f.label :werk_name, "Werkname" %>
        <%= f.text_field :werk_name, class: "form-input", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :contact_person, "Ansprechpartner" %>
        <%= f.text_field :contact_person, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Telefon" %>
        <%= f.text_field :phone, class: "form-input", placeholder: "z.B. +49 123 456789" %>
      </div>
    </div>

    <div class="form-group" style="margin-top: 1.5rem;">
      <%= f.label :address, "Adresse" %>
      <%= f.text_area :address, class: "form-textarea", rows: 3, placeholder: "StraÃŸe, Hausnummer
PLZ Ort" %>
    </div>

    <div class="form-group checkbox-group" style="margin-top: 1.5rem;">
      <%= f.check_box :active, class: "form-checkbox" %>
      <%= f.label :active, "Aktiv" %>
    </div>
  </div>

  <div class="form-actions">
    <%= link_to "Abbrechen",
                loading_location.new_record? ? loading_locations_path : loading_location_path(loading_location),
                class: "btn btn-secondary" %>
    <%= f.submit loading_location.new_record? ? "Ladeort anlegen" : "Ladeort aktualisieren",
                 class: "btn btn-primary" %>
  </div>
<% end %>