<%= form_with model: loading_location, class: "loading-location-form", novalidate: true do |f| %>
  <% if loading_location.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(loading_location.errors.count, "Fehler") %> verhindert das Speichern:</h3>
      <ul>
        <% loading_location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-input", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Adresse" %>
      <%= f.text_area :address, class: "form-input", rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :contact_person, "Ansprechpartner" %>
      <%= f.text_field :contact_person, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Telefon" %>
      <%= f.text_field :phone, class: "form-input" %>
    </div>

    <div class="form-group checkbox-group">
      <%= f.check_box :active, class: "form-checkbox" %>
      <%= f.label :active, "Aktiv" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit loading_location.new_record? ? "Ladeadresse anlegen" : "Ladeadresse aktualisieren",
                 class: "btn btn-primary" %>
    <%= link_to "Abbrechen",
                loading_location.new_record? ? loading_locations_path : loading_location_path(loading_location),
                class: "btn btn-secondary" %>
  </div>
<% end %>